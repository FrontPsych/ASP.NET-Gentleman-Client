        $('#add-person').on('click', function () {
            console.log('#add-person was clicked');
            if ($('#name_box').val()) {

                jQuery.get('/Games/AddUserGameRow').done(function (html) {
                    console.log('got a response');
                    $('#mtable thead tr>th:last').before("<th>" + $('#name_box').val() + "</th>");
                    $('#mtable tbody tr>td:last').before("<td>" + html + "</td>");
                    $('#name_box').val('');
                });
            }
        });

        $('#name_box').keypress(function (event) {
            if (event.keyCode == 13) {
                $('#add-person').click();
                event.preventDefault();
            }
        });
    </script>
